pipeline {
    agent any
    tools{
      maven "maven-3.9"
    }
    parameters{
      choice(name:'VERSION',choices : ['1.1',1.2,1.3], description : 'Version choice')
    }
    stages {
        
        stage("build jar") {
            steps {
                script {
                    echo "building jar"
                    sh "mvn package"
                }
            }
        }
        stage("build image") {
            steps {
                script {
                   echo "building the docker image..."
                   withCredentials([usernamePassword(credentialsId: 'docker-hub-id-pass', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                     sh 'docker build -t parit0sh/my-repo:${params.VERSION} .'
                     sh "echo $PASS | docker login -u $USER --password-stdin"
                     sh 'docker push parit0sh/my-repo:${params.VERSION}'
                  }
                    
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploying"
                    //gv.deployApp()
                }
            }
        }
    }   
}
